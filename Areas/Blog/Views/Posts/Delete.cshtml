@model BlogPost

@{
    ViewData["Title"] = "Delete Blog Post";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this post?</h3>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <h6 class="card-subtitle mb-2 text-muted">By @Model.Author</h6>

            @if (!string.IsNullOrEmpty(Model.Summary))
            {
                <p class="card-text">@Model.Summary</p>
            }

            <dl class="row">
                <dt class="col-sm-2">Created</dt>
                <dd class="col-sm-10">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>

                @if (Model.UpdatedAt.HasValue)
                {
                    <dt class="col-sm-2">Last Updated</dt>
                    <dd class="col-sm-10">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")</dd>
                }

                <dt class="col-sm-2">Status</dt>
                <dd class="col-sm-10">
                    @if (Model.IsPublished)
                    {
                        <span class="badge bg-success">Published</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Draft</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
