@model MyMvcApp.Models.TodoItem

@{
    ViewData["Title"] = "Delete Todo Item";
}

<h2>Delete Todo Item</h2>

<div>
    <h4>Are you sure you want to delete this item?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Task</dt>
        <dd class="col-sm-10">@Model.Task</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Completed</dt>
        <dd class="col-sm-10">@Model.IsCompleted</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
